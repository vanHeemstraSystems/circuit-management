ARG IMAGE_REPOSITORY
# pull official base image, see https://hub.docker.com/r/dpage/pgadmin4
FROM ${IMAGE_REPOSITORY}/dpage/pgadmin4:6.21

# See https://stackoverflow.com/questions/29261811/use-docker-compose-env-variable-in-dockerbuild-file
ARG PROXY_USER
ARG PROXY_PASSWORD
ARG PROXY_FQDN
ARG PROXY_PORT
ARG PGADMIN_DEFAULT_EMAIL
ARG PGADMIN_DEFAULT_PASSWORD
ARG PGADMIN_LISTEN_ADDRESS
ARG PGADMIN_LISTEN_PORT

ENV HTTP_PROXY="http://${PROXY_USER}:${PROXY_PASSWORD}@${PROXY_FQDN}:${PROXY_PORT}"
ENV HTTPS_PROXY="http://${PROXY_USER}:${PROXY_PASSWORD}@${PROXY_FQDN}:${PROXY_PORT}"

ENV PGADMIN_DEFAULT_EMAIL="${PGADMIN_DEFAULT_EMAIL}"
ENV PGADMIN_DEFAULT_PASSWORD="${PGADMIN_DEFAULT_PASSWORD}"
ENV PGADMIN_LISTEN_ADDRESS="${PGADMIN_LISTEN_ADDRESS}"
ENV PGADMIN_LISTEN_PORT="${PGADMIN_LISTEN_PORT}"

# expose port
EXPOSE 7010